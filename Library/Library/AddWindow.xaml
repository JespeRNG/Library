<Window x:Name="AddWindow1" x:Class="Library.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Add Reader" Height="591.892" Width="554.054">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid Background="#FF0F141B" Margin="0,1,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelFirstName" Content="First Name" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Margin="44,213,0,0" VerticalAlignment="Top" Width="110" Height="33" Background="{x:Null}" FontSize="20"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"  HorizontalAlignment="Left" Height="33" Margin="194,213,0,0" VerticalAlignment="Top" Width="240" RenderTransformOrigin="0.5,0.5" Background="#FF403455">
            <TextBox x:Name="TextBoxFirstName" TextWrapping="Wrap" Foreground="#FFE0E0E0" Text="" Margin="9,1,9,-1"/>
        </Border>
        <Label x:Name="LabelLastName" Content="Last Name" HorizontalAlignment="Left" Margin="44,132,0,0" VerticalAlignment="Top" Width="110" Foreground="#FFE0E0E0" FontSize="20" Height="35"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"  HorizontalAlignment="Left" Height="33" Margin="194,132,0,0" VerticalAlignment="Top" Width="242" RenderTransformOrigin="0.5,0.5" Background="#FF403455">
            <TextBox x:Name="TextBoxLastName" TextWrapping="Wrap" Foreground="#FFE0E0E0" Text="" Margin="9,1,9,-1"/>
        </Border>
        <Label x:Name="LabelMiddleName" Content="Middle Name" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Margin="42,292,0,0" VerticalAlignment="Top" Width="130" FontSize="20" Height="35"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"  HorizontalAlignment="Left" Height="33" Margin="192,294,0,0" VerticalAlignment="Top" Width="241" RenderTransformOrigin="0.5,0.5" Background="#FF403455">
            <TextBox x:Name="TextBoxMiddleName" TextWrapping="Wrap" Foreground="#FFE0E0E0" Text="" Margin="9,1,9,-1"/>
        </Border>
        <Label x:Name="LabelTicketNumber" Content="Ticket number" Foreground="#FFE0E0E0" HorizontalAlignment="Left" Margin="42,367,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.491,0.512" Width="145" FontSize="20" Height="35"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"  HorizontalAlignment="Left" Height="33" Margin="192,367,0,0" VerticalAlignment="Top" Width="241" RenderTransformOrigin="0.5,0.5" Background="#FF403455">
            <TextBox x:Name="TextBoxTicketNumber" TextWrapping="Wrap" Foreground="#FFE0E0E0" Text="" Margin="9,1,9,-1"/>
        </Border>
        <Button x:Name="SaveBtn" Content="Save" BorderBrush="#FF0F141B" HorizontalAlignment="Left" Background="#FF403455" Margin="42,490,0,0" VerticalAlignment="Top" Width="100" Click="SaveBtn_Click"/>
        <Button x:Name="CancelBtn" Content="Cancel" BorderBrush="#FF0F141B" HorizontalAlignment="Left" Background="#FF403455" Margin="172,490,0,0" VerticalAlignment="Top" Width="100" Click="CancelBtn_Click"/>
    </Grid>
</Window>
