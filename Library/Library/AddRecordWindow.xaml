<Window x:Name="AddRecorWindow" x:Class="Library.AddRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Add Record" Height="607.892" Width="1089.054">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid Background="#FF0F141B" Margin="0,1,0,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SaveBtn" Content="Save" BorderBrush="#FF0F141B" HorizontalAlignment="Left" Background="#FF403455" Margin="42,503,0,0" VerticalAlignment="Top" Width="100" Click="SaveBtn_Click"/>
        <Button x:Name="CancelBtn" Content="Cancel" BorderBrush="#FF0F141B" HorizontalAlignment="Left" Background="#FF403455" Margin="172,503,0,0" VerticalAlignment="Top" Width="100" Click="CancelBtn_Click"/>
        <DataGrid x:Name="BooksDataGrid" HorizontalAlignment="Left" Width="996" Height="350" Margin="42,59,0,0" VerticalAlignment="Top" Background="#FF817B75" GridLinesVisibility="All" IsReadOnly="True" MouseLeftButtonUp="BooksDataGrid_MouseLeftButtonUp"/>
        <Label Content="Books" HorizontalAlignment="Left" Margin="42,0,0,0" VerticalAlignment="Top" Height="50" FontSize="36" Foreground="#FFE0E0E0" Width="133"/>
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Left" Margin="224,436,0,0" VerticalAlignment="Top" Height="30" Width="92" Background="White" Foreground="White" BorderBrush="#89FFFFFF" Focusable="False"/>
        <Label Content="Date Of Return" HorizontalAlignment="Left" Margin="42,427,0,0" VerticalAlignment="Top" Height="50" FontSize="24" Foreground="#FFE0E0E0" Width="244"/>
    </Grid>
</Window>
